<!-- This is the registration page for the app -->
<div class="row">
	{{!-- Make more mobile friendly--}}
	<div class="col-sm-6 col-md-4 login-box shadow-2" >
		<form>
				<div class="row login-box">
					<div class="col-sm-12 col-md-10 col-md-offset-1">
						<p><img src="{{constants.rootURL}}img/flashycards-banner.png" width="100%" class="img-rounded"/></p>
            <h1>Register</h1>
						<p>Already have an account? {{#active-link}}{{#link-to 'login'}}Login!{{/link-to}}{{/active-link}}</p>
						{{#if auth.errorMsg}}
						<div class="alert alert-danger">
							<p style="text-align: center;">{{auth.errorMsg}}</p>
						</div>
						{{/if}}
						<div class="form-group">
							<div class="input-group">
								<span class="input-group-addon">
									<i class="glyphicon glyphicon-user"></i>
								</span>
								{{input type="text" class="input-sm form-control" required=true value=auth.username enter="login" placeholder="Username" autofocus="autofocus"}}
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<span class="input-group-addon">
									<i class="glyphicon glyphicon-lock"></i>
								</span>
								{{input type="text" class="input-sm form-control" required=true value=auth.password enter="login" placeholder="Password" type="password"}}
							</div>
						</div>
            <!-- <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="glyphicon glyphicon-lock"></i>
                </span>
                {{input type="text"class="input-sm form-control" value=auth.password enter="login" placeholder="Confirm Password" type="password"}}
              </div>
            </div> -->
						<div class="form-group">
							<input type="submit" class="btn btn-lg btn-primary btn-block" value="Register" {{action "register"}}>
						</div>
					</div>
				</div>

		</form>
	</div>
</div>
